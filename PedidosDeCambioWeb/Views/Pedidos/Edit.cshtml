                <span asp-validation-for="CausanteId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Accion" class="control-label"></label>
                <select asp-for="AccionId" class="form-control" asp-items="@(new SelectList(ViewBag.Acciones, "Id", "Name"))"></select>
                <span asp-validation-for="AccionId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Protocolo" class="control-label"></label>
                <input asp-for="Protocolo" class="form-control" />
                <span asp-validation-for="Protocolo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Motivo" class="control-label"></label>
                <input asp-for="Motivo" class="form-control" />
                <span asp-validation-for="Motivo" class="text-danger"></span>
